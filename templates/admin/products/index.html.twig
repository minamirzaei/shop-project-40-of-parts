{% extends "admin/layout.html.twig" %}

{% block content %}

    <table style="width:70%" border="1">
        <tr>
            <th>#</th>
            <th>کد</th>
            <th>نام</th>
            <th>توضیح</th> 
            <th>قیمت</th>
            <th>تعداد</th>
            <th>وضعیت</th>
        </tr>

        {% for p in products %}
            <tr>
                <td>{{loop.index}}</td>
                <td> {{p.sku}}</td>
                <td><a href="{{path}}/admin/products/view.php?id={{p.id}}">{{p.name}}</a></td>
                <td>{{p.description}}</td>
                <td>{{p.price}}</td>
                <td>{{p.quantity}}</td>
                <td>{{p.status}}</td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}